<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Pins</h1>

<%= form_tag destroy_multiple_pins_path, method: :delete do %>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Eliminar</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td style="text-align: center;"> <%= check_box_tag "pins_ids[]", pin.id %></td>
        <td><%= image_tag(pin.photo, :style=> 'width:100px; height: 100')  %></td>
        <td><%= pin.description %></td>
        <td>
          <%= link_to 'Detalles', pin,  :class => "btn btn-link" %> |
          <%= link_to 'Editar', edit_pin_path(pin), :class => "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= submit_tag "Eliminar Seleccionados", :class => "btn btn-danger", :style => "float: right;" %>
<%= link_to(raw("<a data-open='modal' class='btn btn-secondary'>Nuevo</a>"), new_pin_path) %>
  <% end %>

<br>
<%= render 'newForm' %>
</div>